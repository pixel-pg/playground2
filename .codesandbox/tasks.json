{
    "$schema": "https://codesandbox.io/schemas/tasks.json",
    "setupTasks": [
        "yarn install",
        "yarn build"
    ],
    "tasks": {
        "install-dependencies": {
            "name": "Install Dependencies",
            "command": "yarn install"
        },
        "start-app": {
            "name": "Run Dev Server",
            "command": "yarn serve",
            "runAtStart": true,
            "preview": {
                "port": 8081,
                // This next field is optional:
                "prLink": "direct"
            }
        }
    }
}